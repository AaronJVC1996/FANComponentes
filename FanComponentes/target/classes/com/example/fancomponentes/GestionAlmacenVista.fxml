                <Button fx:id="btnAnadir" prefHeight="25.0" prefWidth="89.0" text="AÃ±adir" textAlignment="CENTER" textFill="#42b55f" textOverrun="CLIP" />
                <Button fx:id="btnNuevoCom" onAction="#eliminarEmpleado" prefHeight="25.0" prefWidth="131.0" text="Nuevo Componente" />
            <VBox.margin>
               <Insets top="200.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </HBox>
    <!-- Otro HBox para el boton de refrescar, con su padding para centrarla ala ListView-->

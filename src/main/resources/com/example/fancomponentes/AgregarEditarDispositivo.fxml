<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_LEFT" prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fancomponentes.AgregarEditarDispositivoController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Información del dispositivo -->
    <HBox spacing="10.0">
        <VBox alignment="TOP_LEFT" spacing="10.0">
            <Label text="Nombre:">
            <font>
               <Font size="15.0" />
            </font></Label>
            <Label text="Descripción:">
            <font>
               <Font size="15.0" />
            </font></Label>
        </VBox>
        <VBox alignment="TOP_LEFT" spacing="10.0">
            <TextField fx:id="nombreTextField" />
            <TextArea fx:id="descripcionTextArea" prefHeight="100.0" prefWidth="400.0" wrapText="true" />
        </VBox>
    </HBox>

    <!-- Tabla de componentes y acciones -->
    <HBox alignment="TOP_CENTER" spacing="20.0">

        <!-- Sección de Componentes -->
        <VBox alignment="TOP_LEFT" spacing="10.0" stylesheets="@css/styles.css">
            <Label prefHeight="25.0" prefWidth="116.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Componentes" />
            <TableView fx:id="componentesTableView" prefHeight="300.0" prefWidth="576.0">
                <columns>
                    <TableColumn fx:id="idComponenteColumn" prefWidth="61.0" text="Id" />
                    <TableColumn fx:id="nombreColumn" prefWidth="121.0" text="Nombre" />
                    <TableColumn fx:id="stockColumn" prefWidth="75.0" text="Stock" />
                    <TableColumn fx:id="precioColumn" prefWidth="75.0" text="Precio" />
                    <TableColumn fx:id="descripcionColumn" prefWidth="200.0" text="Descripción" />
                </columns>
            </TableView>
            <Button onAction="#aniadirComponente" prefHeight="25.0" prefWidth="134.0" text="Añadir Componente" />
        </VBox>


        <VBox alignment="TOP_CENTER" spacing="10.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Manual del Dispositivo" />
            <TableView fx:id="manualTableView" prefHeight="300.0" prefWidth="400.0">
                <columns>
                    <TableColumn fx:id="manualComponenteIdColumn" prefWidth="100.0" text="Id Componente" />
                    <TableColumn fx:id="manualComponenteNombreColumn" prefWidth="150.0" text="Nombre Componente" />
                    <TableColumn fx:id="manualCantidadColumn" prefWidth="100.0" text="Cantidad" />
                </columns>
            </TableView>
            <Button onAction="#quitarComponente" prefHeight="25.0" prefWidth="134.0" text="Quitar Componente" />
        </VBox>
    </HBox>

    <!-- Botones de Guardar y Cancelar -->
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#guardarDispositivo" text="Guardar Dispositivo" />
        <Button onAction="#cancelar" text="Cancelar" />
    </HBox>
</VBox>
